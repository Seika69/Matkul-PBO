package bentuk;

public class Lingkaran {
	private double jariJari, keliling, luas;

	public Lingkaran(double r){
		jariJari = r;
	}
	
	public double luasLingkaran(){
		luas = 3.14 * (jariJari * jariJari);
		return luas;
	}

	public double kelilingLingkaran(){
		keliling = 2 * 3.14 * jariJari;
		return keliling;
	}
}
